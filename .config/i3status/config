# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

# order += "ipv6"
# order += "wireless _first_"
# order += "volume source"
order += "ethernet _first_"
# order += "battery all"
order += "disk /home/alice/"
order += "disk /media/storage_gap/" 
# order += "load"
order += "memory"
order += "cpu_usage"
# order += "cpu_temperature all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "%ip oops leaked my address"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/home/alice/" {
        format = "%avail left at home"
	low_threshold = 5
	format_below_threshold = "nooo space? (%avail)"
}
disk "/media/storage_gap/" {
	format = "porn: %used"
}
load {
        format = "%1min"
}

cpu_temperature all {
	format = "temp: %degrees"
}
cpu_usage {
	format = "cpu: %usage"
	max_threshold = 80
	format_above_threshold = "cpu dying: %usage"
	degraded_threshold = 30
	format_above_degraded_threshold = "cpu: %usage"
}
memory {
        format = "memory: %used\\%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}
volume source {
	format = "%volume"
	format_muted ="you're muted you dipshit"
	mixer = "Input"
	device = "Input"
}
volume master {
	format = "vol: %volume"
	format_muted = "muted: (%volume)"
	device = "default"
}
tztime local {
        format = "%Y.%m.%d %H:%M:%S"
}
